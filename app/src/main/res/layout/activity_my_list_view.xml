<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.leiyang.materialdesign.MyListViewActivity">


    <Button
        android:id="@+id/list_activity"
        android:text="@string/list_activity"
        android:onClick="btn_change_listActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/list_view_demo"
        android:text="@string/list_view_demo"
        android:onClick="btn_change_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
